<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="72dp"
    android:orientation="horizontal"
    android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tituloItem"
            android:textSize="21sp"
            android:textColor="#f65034"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imagemItem"
            android:layout_toEndOf="@+id/imagemItem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descricaoItem"
            android:layout_below="@+id/tituloItem"
            android:layout_toRightOf="@+id/imagemItem"
            android:layout_toEndOf="@+id/imagemItem" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/imagemItem"
            android:cropToPadding="false"
            android:src="@drawable/agenda"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/descricaoItem"
            android:maxHeight="35dp"
            android:maxWidth="74dp"
            android:adjustViewBounds="true" />

</RelativeLayout>